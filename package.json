{
  "name": "customer_support_system",
  "version": "1.0.0",
  "description": "SupportFlow - Customer Support Ticketing System",
  "main": "backend/server.js",
  "scripts": {
    "dev": "nodemon backend/server.js",
    "start": "node backend/server.js",
    "frontend": "cd frontend && live-server --port=3000 --open",
    "start:all": "concurrently \"npm run dev\" \"npm run frontend\"",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage"
  },
  "keywords": [
    "Customer",
    "Support",
    "Ticketing",
    "System"
  ],
  "author": "Keyur Arora",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "live-server": "^1.2.2",
    "mongoose": "^8.19.3",
    "nodemon": "^3.1.11"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "jest": "^30.2.0",
    "mongodb-memory-server": "^10.3.0",
    "supertest": "^7.1.4"
  }
}
